# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /               controllers.Application.index

POST     /note           controllers.Application.createNote
GET      /note/:id       controllers.Application.findNote(id: String)
PUT      /note/:id       controllers.Application.editNote(id: String)
DELETE   /note/:id       controllers.Application.deleteNote(id: String)

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file   controllers.Assets.at(path="/public", file)
